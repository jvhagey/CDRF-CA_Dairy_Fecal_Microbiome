write.xlsx(res_HT_FSvsDL.taxa, "logchange_FSvsDL.xlsx", sheetName="Freestall vs Drylot")

#exporting significant fold changes to excel file
write.xlsx(sigtabFam[[3]], "sigtabfam.xlsx",sheetName="Freestall vs Pasture")
