#sample_data(MERGE_Phylum_HT.zero) <- sample_data(new)
#sample_data(MERGE_Phylum_HT.zero)

#----------------------------------------------------Graphing Relative Abundance of Phyla--------------------------------------------------------------#
#subsetting phylums for graphing
Phylum.1 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Planctomycetes"))
Phylum.2 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Lentisphaerae"))
Phylum.3 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Proteobacteria"))
Phylum.4 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Verrucomicrobia"))
Phylum.5 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Elusimicrobia"))
Phylum.6 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Fibrobacteres"))
Phylum.7 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Tenericutes"))
Phylum.9 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Cyanobacteria"))
Phylum.8 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Euryarchaeota"))
Phylum.11 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Spirochaetes"))
Phylum.12 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Actinobacteria"))
Phylum.13 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Firmicutes"))
Phylum.14 = subset_taxa(MERGE_Phylum.zero, Phylum == c("Bacteroidetes"))

#Merging groups of specific Phylums
#minor contributors + Bact and Firm
MERGE_Phylum.sub <- merge_phyloseq(Phylum.13, Phylum.14,Phylum.12, Phylum.3, Phylum.7,Phylum.11)
#everything, but Bact and Firm
MERGE_Phylum.sub2 <- merge_phyloseq(Phylum.1,Phylum.2,Phylum.6,Phylum.5,Phylum.8,Phylum.9,Phylum.12, Phylum.4, Phylum.3, Phylum.7,Phylum.11)
#Relative abundance of everything
Phylum_rel <- transform_sample_counts(MERGE_Phylum_HT.zero, function(x) 100*x/sum(x))
#------------------------------Graphing relative transformed abundances with different phylums-------------------------------------------#
MERGE_Phylum.sub.HT <- merge_samples(MERGE_Phylum.sub, "HousingType", fun=mean)
sample_data(MERGE_Phylum.sub.HT)$HousingType <- c("Drylot", "Freestall", "Pasture")

#calculating error bars to graph mean transformed abundance of major phyla
melted <- psmelt(MERGE_Phylum.sub)
grouped <- dplyr::group_by(melted, Farm, Phylum, HousingType)
phyla <- as.data.frame(dplyr::summarise(grouped, mean=mean(Abundance), sd=sd(Abundance), sem = (sd(Abundance)/sqrt(length(Abundance)))))

