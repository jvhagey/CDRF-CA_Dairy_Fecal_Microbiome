colnames(res_HT_FSvsP.taxa)[2] <- "log2FoldDifference"
colnames(res_HT_DLvsP.taxa)[2] <- "log2FoldDifference"
colnames(res_HT_FSvsDL.taxa)[2] <- "log2FoldDifference"

