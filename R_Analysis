        strip.text.x=element_text(angle=0,face = "bold"), axis.title=element_text(face = "bold"), panel.grid.major.x = element_blank(), 
        axis.line.x = element_line(size = 0.5, linetype = "solid", colour = "black"), axis.line.y = element_line(size = 0.5, linetype = "solid", colour = "black"), 
        panel.spacing.x=unit(0, "lines"),panel.spacing.y=unit(0.4, "lines"), panel.border = element_blank(),panel.grid.minor.y=element_blank())+
  labs(x="Farm", y="Average Transformed Abundance")
dev.off()

